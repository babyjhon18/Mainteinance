

@{
    Layout = null;
}


<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("Create", "Accessories", FormMethod.Post, new { @class = "form-horizontal", @id = "CreateAccessoriesForm", @role = "form" }))
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h5 class="modal-title"><i class="fa fa-plus"></i> Добавить комплектующее</h5>
            </div>
            <div class="modal-body">
                <fieldset>
                    <legend><i class="fa fa-pencil-square-o"></i>Комплектующее</legend>
                    <div class="form-group">
                        <label for="AccessoriesName" class="col-lg-4 control-label">Наименование</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" placeholder="Наименование" id="AccessoriesName" name="AccessoriesName" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="AccessoriesValue" class="col-lg-4 control-label">Стоимость</label>
                        <div class="col-lg-8">
                            <input type="number" class="form-control" placeholder="0.00" id="AccessoriesValue" name="AccessoriesValue" step="0.01" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="AccessoriesMeasureUnit" class="col-lg-4 control-label">Единица измерения</label>
                        <div class="col-lg-8"> 
                            <input type="text" class="form-control" placeholder="1 шт" id="AccessoriesMeasureUnit" name="AccessoriesMeasureUnit" required />
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> Отмена</button>
                <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i> Добавить</button>
            </div>
        }
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".chosen-select").chosen({
            width: "100%",
            allow_single_deselect: true
        });

      $("#IsActive")
        .on("change",
          function() {
            if ($(this).is(":checked")) {
              $(this).val("true");
            } else {
              $(this).val("false");
            }
          });

    });
</script>