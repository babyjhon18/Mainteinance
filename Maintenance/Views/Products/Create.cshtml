@model IEnumerable<Project.Models.Accessories>
@{
    Layout = null;
}


<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { @class = "form-horizontal", @id = "CreateProductsForm", @role = "form" }))
            {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h5 class="modal-title"><i class="fa fa-plus"></i> Добавить изделие</h5>
            </div>
            <div class="modal-body">
                <fieldset>
                    <legend><i class="fa fa-pencil-square-o"></i>Изделие</legend>
                    <div class="form-group">
                        <label for="ProductName" class="col-lg-4 control-label">Наименование</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" placeholder="Наименование" id="ProductName" name="ProductName" required />
                        </div>
                    </div>
                    @*<div class="form-group">
                        <label for="Material" class="col-lg-4 control-label">Комплектующие</label>
                        <div class="col-lg-8">
                            <select class="form-control" placeholder="Наименование" id="Material" name="Material">
                                @foreach (var i in Model)
                                {
                                        <option id="@i.Id" value="@i.Id">@i.Name</option>
                                }
                            </select>
                        </div>
                    </div>*@
                </fieldset>
                <a id="add" style="margin-top:10px" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i> Добавить комплектующее</a>
            </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> Отмена</button>
                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i> Добавить</button>
                </div>
        }
    </div>
</div>

<script>
    $(document).ready(function () {
        var count = 1;
        $("#add").on('click', function () {
                count++
                $("fieldset").append('<div class="form-group">' +
                    '<label for="Material'+count+'" class="col-lg-4 control-label">Комплектующие</label>' +
                    '<div class="col-lg-8">' +
                    '<select class="form-control" placeholder="Наимен+ование" id="Material'+count+'" name="Material'+count+'">' +
                    '@foreach (var i in Model) {<option id="@i.Id" value="@i.Id">@i.Name</option>}'+
                    '</select>' +
                    ' </div>' +
                    '</div>');
            });

            $(".chosen-select").chosen({
                width: "100%",
                allow_single_deselect: true
            });

            $("#IsActive")
                .on("change",
                function () {
                    if ($(this).is(":checked")) {
                        $(this).val("true");
                    } else {
                        $(this).val("false");
                    }
                });

        });
</script>