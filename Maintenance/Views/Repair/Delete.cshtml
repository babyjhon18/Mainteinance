@model Project.Models.RepairClass
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("Delete", "Repair", FormMethod.Post, new { @class = "form-horizontal", @id = "DeleteRepairForm", @role = "form" }))
        {
            <div class="modal-header">
                <input type="hidden" value="@ViewBag.ID" id="Id" name="Id" />
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h5 class="modal-title"><i class="fa fa-trash"></i> Удалить ремонт</h5>
            </div>
            <div style="text-align: center;margin: 30px;">
                <h3>Вы действительно хотите удалить?</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> Отмена</button>
                <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-trash"></i> Удалить</button>
            </div>
        }
    </div>
</div>
<style>
    .col-lg-8 {
        color: black;
        font-size: 12px;
    }
</style>